<ul class="record_actions">
    <li>
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}" class="btn btn-info">
            <i class="fa fa-list"></i> {{ "{{ 'Back to the list'|trans }} " }}
        </a>
    </li>
{% if ('edit' in actions) and (not hide_edit) %}
    <li>
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}" class="btn btn-success">
            <i class="fa fa-pencil"></i> {{ "{{ 'Edit'|trans }} " }}
        </a>
    </li>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
    <li>
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_delete', { 'id': entity.id }) }}" }}" class="btn btn-danger">
            <i class="fa fa-trash"></i> {{ "{{ 'Delete'|trans }} " }}
        </a>
    </li>
{% endif %}
</ul>
